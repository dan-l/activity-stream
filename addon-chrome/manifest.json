{
  "manifest_version": 2,

  "name": "Activity Stream Add-on",
  "description": "MVP prototype add-on for activity streams",
  "version": "1.0",

  "browser_action": {
    "default_icon": "content/img/firstrun-customize.png"
  },
  "permissions": [
    "history",
    "tabs",
    "management",
    "chrome://favicon/",
    "bookmarks",
    "topSites",
    "http://*/*",
    "https://*/*"
  ],
  "chrome_url_overrides" : {
    "newtab": "content/activity-streams.html"
  }
}
