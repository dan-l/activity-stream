{
  "manifest_version": 2,

  "name": "Activity Stream Add-on",
  "description": "MVP prototype add-on for activity streams",
  "version": "1.0",

  "browser_action": {
    "default_icon": "data/content/img/firstrun-customize.png" 
  },
  "permissions": [
    "history",
    "tabs",
    "chrome://favicon/",
    "bookmarks"
  ],
  "chrome_url_overrides" : {
    "newtab": "data/content/activity-streams.html"
  }
}
